{% extends template_file('@phpManufaktur/Basic/Template', 'kitcommand/iframe.body.twig') %}
{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/CommandCollection/Template/Rating/default/css/jRating.jquery.css" media="screen, projection" />
{% endblock stylesheet %}
{% block jquery %}
  {{ parent() }}
  <script type="text/javascript" src="{{ MANUFAKTUR_URL }}/CommandCollection/Template/Rating/default/jquery/jRating.jquery.js"></script> 
{% endblock jquery %}
{% block content %}
  <div class="rating-container">
    <div class="rating-stars rating-{{ guid }}" data-average="{{ average }}" data-id="{{ identifier_id }}"></div>
    {% if count > 0 %}<div class="rating-count">{{ count }} {% if count > 1 %}{{ 'votes'|trans }}{% else %}{{ 'vote'|trans }}{% endif %}</div>{% endif %}
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
{% endblock %}
{% block footer %}
  {#% set iframe_add_height = 0 %#}
  <script type="text/javascript">
    if (typeof 'jQuery' !== 'undefined') {
      $(document).ready(function() {
        $(".rating-{{ guid }}").jRating({
          bigStarsPath: '{{ MANUFAKTUR_URL }}/CommandCollection/Template/Rating/default/css/icons/stars.png',
          smallStarsPath: '{{ MANUFAKTUR_URL }}/CommandCollection/Template/Rating/default/css/icons/small.png',
          phpPath: '{{ FRAMEWORK_URL }}/collection/rating/response',
          type:'{{ size }}', 
          length : 5, 
          step: true,
          rateMax: 5,
          showRateInfo: false,        
          {% if is_disabled %}isDisabled: true,{% endif %}
        });
      });
    }
  </script>
  {{ parent() }}
  
{% endblock footer %}